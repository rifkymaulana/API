@{

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Data Pokemons</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Pokemon</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">DataTable with minimal features & hover style</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-1">No</th>
                                        <th>Name</th>
                                        <th class="col-2">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @i
                                            </td>
                                            <td>
                                                @item.Name
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-block btn-primary"
                                                    onclick="clickDetailPokemon('@item.Url')" data-toggle="modal"
                                                    data-target="#modal-lg">Detail</button>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->

        <div class="modal fade" id="modal-lg">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Title</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="row">
                                <div class="col-6">
                                    <!-- Default box -->
                                    <div class="card card-solid">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-12">
                                                    <h3 class="d-inline-block d-sm-none">LOWA Menâ€™s Renegade GTX Mid
                                                        Hiking Boots
                                                        Review</h3>
                                                    <div class="col-12">
                                                        <img id="img1" src="" class="product-image" alt="Product Image">
                                                    </div>
                                                    <div class="col-12 product-image-thumbs">
                                                        <div class="product-image-thumb active"><img id="img2"
                                                                src="../../dist/img/prod-1.jpg" alt="Product Image">
                                                        </div>
                                                        <div class="product-image-thumb"><img id="img3"
                                                                src="../../dist/img/prod-2.jpg" alt="Product Image">
                                                        </div>
                                                        <div class="product-image-thumb"><img id="img4"
                                                                src="../../dist/img/prod-3.jpg" alt="Product Image">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->
                                </div>
                                <div class="col-6">
                                    <!-- Default box -->
                                    <div class="card card-solid">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="row mt-4">
                                                        <nav class="w-100">
                                                            <div class="nav nav-tabs" id="product-tab" role="tablist">
                                                                <a class="nav-item nav-link active"
                                                                    id="product-desc-tab" data-toggle="tab"
                                                                    href="#product-desc" role="tab"
                                                                    aria-controls="product-desc"
                                                                    aria-selected="true">Description</a>
                                                            </div>
                                                        </nav>
                                                        <div class="tab-content p-3" id="nav-tabContent">
                                                            <div class="tab-pane fade show active" id="product-desc"
                                                                role="tabpanel" aria-labelledby="product-desc-tab">
                                                                <p>Height : </p>
                                                                <p>Weight : </p>
                                                                <p>Base Experience : </p>
                                                                <p>Abilities : </p>
                                                                <p>Types : </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <!-- /.card-body -->
                                    </div>
                                    <!-- /.card -->
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


