<h1 id="judul">Pokemon</h1>
<table id="myTable" class="table table-striped table-hover" style="
    font-family: 'Comic Sans MS';
    background-image: url('https://www.diastuff.de/wp-content/uploads/2016/07/FS-082.jpg.webp');
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    background-size: 50%">
    <thead class="table" style="background-color: #ff2100; color: white">
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbody">
    </tbody>
</table>

<div class="modal" id="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">

            @*Modal Header*@
            <div style="background-color:#faebd7" class="modal-header">
                <img src="https://w7.pngwing.com/pngs/173/464/png-transparent-pokemon-ball-pokeball-area-wiki-technology.png" class="pokemon-ball">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            @*Modal Body*@
            <div style="background-color:darkkhaki;" class="modal-body">
                <div class="pokemon-details">
                    <img src="" class="image" alt="..." id="image-front">
                    <div class="title-stat">Stats of Pokemon
                        <div class="stats"></div> 
                    </div>
                </div>
                <div class="info" style="display:flex">
                    <div class="pokemon-info" style="width:50%">
                        <div class="title-info"><span>Abilities</span></div>
                        <div class="abilities" id="abilities" style="text-align:center;"></div>
                        <div class="title-type"><span>Type</span></div>
                        <div class="types" id="types" style="text-align:center"></div>
                    </div>
                    <div class="additional-info" style="width:50%; margin-left: 3px" >
                        <div class="title-info"><span>Info</span></div>
                        <div class="items" id="items" style="text-align:center"></div>
                        <div style="text-align:center; font-family: 'Comic Sans MS'; margin: 4px">
                            <div><span class="info-weight-height">Base Experience:</span><span class="base-experience" id="base-experience"></span><span class="info-weight-height">Times</span></div>
                            <div><span class="info-weight-height">Weight:</span><span class="weight" id="weight"></span><span class="info-weight-height">Kg</span></div>
                            <div><span class="info-weight-height">Height:</span><span class="height" id="height"></span><span class="info-weight-height">M</span></div>                           
                        </div>
                    </div>
                </div>   
            </div>

            @*Modal Footer*@
            <div style="background-color:#faebd7" class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
